<Project>
    <PropertyGroup>
        <JustInTimeVersioningAssemblyFile>$(MSBuildThisFileDirectory)../lib/JustinWritesCode.JustInTimeVersioning.dll</JustInTimeVersioningAssemblyFile>
    </PropertyGroup>
    <UsingTask TaskName="JustinWritesCode.JustInTimeVersioning.SaveVersionNumberCentrally" AssemblyFile="$(AssemblyFile)" />
    <Target Name="SaveVersionNumberCentrally" AfterTargets="GetPackageVersion">
    <JustinWritesCode.JustInTimeVersioning.SaveVersionNumberCentrally
        PackageName="$(PackageId)"
        Version="$(PackageVersion)" 
        Configuration="$(Configuration)" />
    </Target>
</Project>
