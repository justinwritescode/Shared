<Project>
  <ItemDefinitionGroup>
    <RestorablePackageFile PackagePath="/" RestoreFolder="/" IsRestorable="true" Pack="true" />
    <NonRestorablePackageFile PackagePath="/" RestoreFolder="/" IsRestorable="true" Pack="true" />
  </ItemDefinitionGroup>
  <ItemGroup>
    <RestorablePackageFile Include="$(MSBuildProjectDirectory)../../../.github/**/*.*" Exclde=".DS_Store" PackagePath="common/.github/%(RecursiveDir)%(Filename)%(Extension)" RestoreFolder=".github/%(RecursiveDir)" RestorePath="$(MSBuildProjectDirectory)/%(RestoreFolder)%(Filename)%(Extension)" />
    <RestorablePackageFile Include="$(MSBuildProjectDirectory)../../../.gitignore" PackagePath="common/%(Filename)%(Extension)" RestorePath="$(MSBuildProjectDirectory)/%(Filename)%(Extension)" />
    <RestorablePackageFile Include="$(MSBuildProjectDirectory)../../../.vscode/tasks.json" PackagePath="common/.vscode/%(Filename)%(Extension)" RestoreFolder=".vscode/" RestorePath="$(MSBuildProjectDirectory)/%(RestoreFolder)%(Filename)%(Extension)" />
    <RestorablePackageFile Include="$(MSBuildProjectDirectory)../../../docs/*.*" PackagePath="common/docs/%(Filename)%(Extension)" RestoreFolder="docs/" RestorePath="$(MSBuildProjectDirectory)/%(RestoreFolder)%(Filename)%(Extension)" />
    <RestorablePackageFile Include="$(MSBuildProjectDirectory)../../../global.json" PackagePath="common/%(Filename)%(Extension)" RestorePath="$(MSBuildProjectDirectory)/%(Filename)%(Extension)" />
    <RestorablePackageFile Include="$(MSBuildProjectDirectory)../../../NuGet.config" PackagePath="common/%(Filename)%(Extension)" RestorePath="$(MSBuildProjectDirectory)/%(Filename)%(Extension)" />
    <RestorablePackageFile Include="$(MSBuildProjectDirectory)../../../Versions/*.*" PackagePath="common/Versions/%(Filename)%(Extension)" RestoreFolder="Versions/" RestorePath="$(MSBuildProjectDirectory)/%(RestoreFolder)%(Filename)%(Extension)" />
    <RestorablePackageFile Include="$(MSBuildProjectDirectory)../../../assets/*.*" PackagePath="common/assets/%(Filename)%(Extension)" RestoreFolder="assets/" RestorePath="$(MSBuildProjectDirectory)/%(RestoreFolder)%(Filename)%(Extension)"/>
    <RestorablePackageFile Include="$(MSBuildThisFileDirectory)root/Directory.Build.props" PackagePath="common/Directory.Build.props" RestorePath="$(MSBuildProjectDirectory)/%(Filename)%(Extension)" />
    <RestorablePackageFile Include="$(MSBuildThisFileDirectory)root/Directory.Build.targets" PackagePath="common/Directory.Build.targets" RestorePath="$(MSBuildProjectDirectory)/%(Filename)%(Extension)"/>
    <RestorablePackageFile Include="$(MSBuildThisFileDirectory)root/Packages.pkgs" PackagePath="common/Packages.pkgs" RestorePath="$(MSBuildProjectDirectory)/%(Filename)%(Extension)"/>
    <NonRestorablePackageFile Include="$(MSBuildProjectDirectory)../../../Packages/*.pkgs" PackagePath="common/Packages/%(Filename)%(Extension)" RestoreFolder="Packages/" RestorePath="$(MSBuildProjectDirectory)/%(RestoreFolder)%(Filename)%(Extension)"/>
    <NonRestorablePackageFile Include="$(MSBuildProjectDirectory)../../../Directory.Build/*.*" PackagePath="common/Directory.Build/%(Filename)%(Extension)" RestoreFolder="Directory.Build/" RestorePath="$(MSBuildProjectDirectory)/%(RestoreFolder)%(Filename)%(Extension)"/>

    <RestoreFile Include="@(RestorablePackageFile->'$(MSBuildThisFileDirectory)../%(PackagePath)')" 
                 RestorePath="%(RestorePath)" />
  </ItemGroup>
</Project>
